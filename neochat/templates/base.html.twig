<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {# LIEN ICONES FONTAWESOME #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
        integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    {# LIEN BOOTSWATCH #}
    <link rel="stylesheet" href="https://bootswatch.com/5/slate/bootstrap.min.css">
    {# SCRIPT BOOTSTRAP BUNDLE JS #}
    {# LIEN CSS #}
    <link rel="stylesheet" href="{{asset('assets/css/style.css')}}">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous">
    </script>
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
    <header>
        <nav id="navbar" class="navbar navbar-dark fixed-top">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                    <img src="{{asset('./assets/img/logo_neochat_crop.png')}}" alt="Logo" width="40" height="40"
                        class="d-inline-block align-text-top">
                </button>
                <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar"
                    aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <img src="{{asset('./assets/img/logo_neochat_crop.png')}}" alt="Logo" width="40" height="40"
                            class="d-inline-block align-text-top">
                        NeoChat
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#"><i class="fa-solid fa-house"></i> Accueil</a>
                            </li>
                            {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="fa-regular fa-comment-dots"></i> Général</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false"><i class="fa-solid fa-hashtag"></i>
                                    Les Salons
                                </a>

                                <ul class="dropdown-menu dropdown-menu-dark">
                                    {% if channels %}
                                    {% for channel in channels %}
                                    <li><a class="dropdown-item"
                                            href="{{ path('chat', {id: channel.id}) }}">{{ channel.name }}</a></li>
                                    {% endfor %}
                                    {% else %}
                                    <li>Aucune channel trouvées</li>
                                    {% endif %}
                                </ul>
                            </li>
                            {% else %}
                            <li>Connectez-vous pour accéder aux Channels</li>
                            {% endif %}
                        </ul>
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            {% if app.user %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                                    aria-haspopup="true" aria-expanded="false"><i class="fa-solid fa-user"></i>
                                    Profil</a>
                                <div class="dropdown-menu dropdown-menu-dark">
                                    {% if is_granted("ROLE_ADMIN") %}
                                    <a class="dropdown-item" href="{{ path('admin') }}"><i class="fa-solid fa-lock"></i>
                                        Admin(accès
                                        privé)
                                    </a>
                                    {% endif %}
                                    <a class="dropdown-item" href="{{ path('app_logout') }}"><i
                                            class="fa-solid fa-right-from-bracket"></i>
                                        Déconnexion</a>
                                </div>
                            </li>
                            {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('app_register')}}"><i
                                        class="fa-solid fa-user-plus"></i>
                                    Inscription</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('app_login')}}"><i class="fa-solid fa-user"></i>
                                    Connexion</a>
                            </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    {% block body %}{% endblock %}
</body>

</html>