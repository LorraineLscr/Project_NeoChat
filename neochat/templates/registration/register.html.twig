    <div class="container">
        <h3>Inscription</h3>
        <br>
        {{form_start(registrationForm)}}
        <div class="form-group">
            {{ form_row(registrationForm.nom, {"label":"Nom :", "attr":{"placeholder":"Votre nom", "class":"champ"}}) }}
        </div>
        <br>
        <div class="form-group">
            {{ form_row(registrationForm.prenom, {"label":"Prénom :", "attr":{"placeholder":"Votre prénom", "class":"champ"}}) }}
        </div>
        <br>
        <div class="form-group">
            {{ form_row(registrationForm.email, {"label":"Email :", "attr":{"placeholder":"Votre email", "class":"champ"}}) }}
        </div>
        <br>
        <div class="form-group">
            {{ form_row(registrationForm.plainPassword, {"label":"Mot de Passe :", "attr":{"placeholder":"Votre mot de passe", "class":"champ"}}) }}
        </div>
        <br>
        <div class="form-group">
            {{ form_row(registrationForm.confirmPassword, {"label":"Confirmation du Mot de Passe :", "attr":{"placeholder":"Votre mot de passe", "class":"champ"}}) }}
        </div>
        <br>
        <div class="form-group">
            {{ form_row(registrationForm.agreeTerms, {"label":"J'accepte les termes :", "attr":{"placeholder":"", "class":"champ"}}) }}
        </div>
        <button type="submit" class="btn btn-dark">S'inscrire</button>
        {{form_end(registrationForm)}}
    </div>
