{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
<div class="container">
    {% for flash_error in app.flashes('reset_password_error') %}
    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h2>Réinitialisez votre mot de passe</h2>
    <br>
    {{ form_start(requestForm) }}
    <div class="form-group">
        {{ form_row(requestForm.email, {"label":"Email : ", "attr":{"placeholder":"", "class":"form-control"}}) }}
    </div>
    <div>
        <small>
            Entrez votre adresse e-mail et nous vous enverrons un
            lien pour réinitialiser votre mot de passe.
        </small>
    </div>
    <br>
    <button class="btn btn-primary">Envoyer un e-mail de réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
</div>
{% endblock %}